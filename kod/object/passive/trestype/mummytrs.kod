constants:

   include blakston.khd

classvars:

   viTreasure_num = TID_MUMMY

properties:

   /// mummies will generally generate crap.
   piDiff_seed = 1
   piItem_Att_chance = 4

messages:

   Constructed()
   {
      plTreasure = [ [ &RedMushroom, 15 ],
                     [ &BlueMushroom, 15 ],
                     [ &Mushroom, 17 ],
                     [ &Herbs, 10],
                     [ &Elderberry, 10 ],
                     [ &Torch, 8 ],
                     [ &EntrootBerry, 5 ],
                     [ &Mace, 5 ],
                     [ &Shortsword, 5 ],
                     [ &Longsword, 4],
                     [ &OrcTooth, 3],
                     [ &MetalShield, 3] ];

      propagate;
   }

end
